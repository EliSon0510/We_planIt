<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.txedbike.com/upfile/2020/03/31/20200331144911_125.jpg);">
  <div class="container">
    <h1>Find your next trip</h1>
     <%= form_tag trips_path, method: :get do %>
      <div id= "search-data" class="form-search search-data" data-skills="<%= @skills.to_json %>">

      <%= text_field_tag :destination, params[:destination], placeholder: "Search for your destination here", autocomplete: :on, class: "form-control search-input"%>

      <%= submit_tag "Search", name: nil %>
    </div>
    <% end %>
  </div>
</div>

<div class="flex-container">
  </div>
  <div>
    <h4>Add your trip to the list</h4>
    <div id="but">
      <%= link_to "Add a new trip !", new_trip_path, class: "btn-round-corners"%>
    </div>
  </div>
</div>


<div id="map"
     style="width: 80%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


<div class="flex-container">
  <h1>All the created trips</h1>
  <br>
  <div class="grid-cards">

    <% @trips.order("updated_at desc").each do |trip| %>
      <div class="card-bike">
        <%= image_tag "vintage-world.jpg" %>

        <h3><%= link_to trip.destination, trip_path(trip) %></h3>
        <h3><%= trip.start_date %></h3>
        <h3><%= trip.end_date %></h3>
        <h3><%= trip.budget %> â‚¬/day</h3>
        <p><%= trip.interest.name %></p>

        <%= link_to"See more", trip_path(trip) %>
      </div>
    <% end %>
  </div>
</div>
