<div class="banner height220px padding50" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://png.pngtree.com/thumb_back/fw800/back_our/20190622/ourmid/pngtree-blue-minimalist-flat-travel-banner-background-image_223018.jpg); border-radius: 5px;">
  <div class="container">
    <h1>Find your next vacation !</h1>
    <%= form_tag trips_path, method: :get do %>
      <%= text_field_tag :destination, nil, autocomplete: :on, class: 'form-control search-input', id:'search-bar'%>
      <% budgets= ["0-300", "300-600"] %>
      <%= select_tag :budget, options_for_select(budgets), prompt: "Selct your budget" %>
      <%=label_tag 'Starting date of your next trip:' %>
      <%= date_select 'start date', :start_date %>
      <%=label_tag ' - Ending date of your next trip:' %>
      <%= date_select 'end date', :end_date %>
      <%= submit_tag 'Search', name: nil %>
    <% end %>
  </div>
</div>


  <div style="
    margin: 65px 0;
    display: flex;
    flex-direction: column;
    align-items: center;">
    <h4>Add your trip to the list</h4>
    <%= link_to "+ New trip !", new_trip_path, class: "btn btn-primary"%>
  </div>



<div id="map"
     style="width: 100%; height: 450px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


<div>
  <h1>All the created trips</h1>
  <br>
  <div class="flex-container">

    <% @trips.order("updated_at desc").each do |trip| %>

      <div class="trip-card">
        <%= image_tag("vintage-world.jpg", size: "242x242", alt: "trip image")%>

        <div class="trip-details">
          <h3><%= link_to trip.destination, trip_path(trip) %></h3>
          <div class="trip-schedule">
            <h3><%= trip.start_date %></h3>
            <h3><%= trip.end_date %></h3>
          </div>
          <div class="trip-budget">
            <h3><%= trip.budget %> â‚¬/week</h3>
          </div>
          <p class="trip-more"><%= trip.interest.name %></p>

          <%= link_to"See more", trip_path(trip) %>

        </div>
      </div>

    <% end %>
  </div>

</div>
