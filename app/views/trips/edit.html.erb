  <div class="container">
    <h1>Edit your trip</h1>
  </div>
</div>


<div class="background_white p-3 text-center">
  <h2>What would you like to update ?</h2>
</div>

<div class="flex-container-2col trip-card mx-5 my-4">

  <div class="container">
    <%= simple_form_for [@user, @trip] do |f| %>
    <%= f.input :destination %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :photo, as: :file %>
  </div>
  <div class="container ml-3">
    <%= f.association :interests, as: :check_boxes, item_wrapper_class: "inline_block", class: 'form-control' %>
    <%= f.input :budget, :label => "â‚¬ budget/week" %>
    <%= f.submit "Edit", class: "btn btn-flat-review text-center" %>
    <% end %>
  </div>
</div>
