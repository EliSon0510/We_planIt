

<h1>Your profile</h1>

<%= cl_image_tag @profile.photo.key, height: 150, width: 150, crop: :thumb %>
<h2><%= @profile.first_name %> <%= @profile.last_name %></h2>
<h3>Age : <%= @profile.age %></h3>
<h3>From <%= @profile.location %></h3>

<% if policy(@profile).edit? %>
<%= link_to "Edit your profile", edit_profile_path(@profile), class: "btn-round-corners" %>
<% end %>
<br>
<% if policy(@profile).delete? %>
<%= link_to "Delete the profile", profile_path(@profile), method: :delete, data: {confirm: "Are you sure?"}, class: "btn-round-corners" %>
<% end %>
